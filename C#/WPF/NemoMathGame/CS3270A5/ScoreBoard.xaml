<Window x:Class="CS3270A5.ScoreBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3270A5"
        mc:Ignorable="d"
        Title="ScoreBoard" Height="330.026" Width="212.511">
    <Grid Margin="-1,0,-0.4,0.8" Background="#FF1E46B0">
        <Label x:Name="lbl_player_name" Content="Label" HorizontalAlignment="Left" Height="38" Margin="61,52,0,0" VerticalAlignment="Top" Width="79" Foreground="#FFF6F3F3" FontSize="20" HorizontalContentAlignment="Center"/>
        <RichTextBox x:Name="rtb_Scores" HorizontalAlignment="Left" Height="152" Margin="20,92,0,0" VerticalAlignment="Top" Width="170" VerticalScrollBarVisibility="Auto">
            <FlowDocument/>
        </RichTextBox>
        <Button x:Name="btn_close" Content="Close" HorizontalAlignment="Left" Height="37" Margin="58,251,0,0" VerticalAlignment="Top" Width="91" Click="btn_close_Click" Background="#FFDB8E6C" BorderBrush="#FFF26E4D" BorderThickness="3" Foreground="#FF1E46B0" FontSize="16" FontFamily="Snap ITC"/>

    </Grid>
</Window>
